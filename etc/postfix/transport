# Handle all root@<subdomain>.pep.security (must stay above "local backscatter accounts" below)
# /^root@.*\.pep.security$/			pepgateIN:

# Backscatter accounts
/^postmaster@.*/					local:
/^abuse@.*/							local:
/^mailer-daemon@.*/					local:
/^nobody@.*/						local:
/^hostmaster@.*/					local:
/^webmaster@.*/						local:
/^www@.*/							local:
/^www-data@.*/						local:
/^noc@.*/							local:
/^security@.*/						local:
/^double-bounce@.*/					local:
/^root@.*/							local:

# Directly handled by Exchange (keep at bottom!)
/^.*@pep\.security/					smtp:[192.168.10.10]

/^.*@365\.pep\.security/			smtp:pproxy.onmicrosoft.com

