# Run "postmap /etc/postfix/transport" after modifying this file

/^pepgate@pep.*/					local:

# Handle all root@<subdomain>.pep.security (must stay above "local backscatter accounts" below)
/^root@.*\.peptest.*/				pepgateIN:

# Backscatter accounts
/^postmaster@.*/					local:
/^abuse@.*/							local:
/^mailer-daemon@.*/					local:
/^nobody@.*/						local:
/^hostmaster@.*/					local:
/^webmaster@.*/						local:
/^www@.*/							local:
/^www-data@.*/						local:
/^noc@.*/							local:
/^security@.*/						local:
/^double-bounce@.*/					local:
/^root@.*/							local:

/^discard@.*/						discard:
/^showq@.*/							showq:

/.*@gate\.peptest\.ch/				pepgateIN:
/.*@gate365\.peptest\.ch/			pepgateIN:

/.*@proxy\.peptest\.ch/				smtp:[plesk.peptest.ch]
/.*@proxy365\.peptest\.ch/			smtp:[pproxy.onmicrosoft.com]

/^pepgate@hub.peptest.*/			local:
/^pepbot@hub.peptest.*/				local:

# Handle the remaining *@<subdomain>.peptest.ch
/.*@.*\.peptest.*/					pepgateIN:

# /.*@365\.pep.*/					scan:fakeblack.pep.security:25
# /.*@somedomain\.com/				smtp:[1.2.3.4]
# /.*@hub.peptest.*/				pepgateIN: # fallback for already queued messages
# /^support@pep.*/					pepgateIN:
# /^contact@pep.*/					pepgateIN:
# /^info@pep.*/						pepgateIN:
# /^it@pep.*/						pepgateIN:

